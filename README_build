################################
# example build configuration
################################

##########
# mdlslx03
##########
module load cuda/6.5 hdf5/parallel_gnu48 pnetcdf/1.3.1
module load papi/5.3.0_nocuda

# cpu only build
../configure --with-cuda=no --enable-timing --with-vtk-version=-6.0 --enable-double --with-cuda-fast-math=no --with-pnetcdf=/home/pkestene/local/pnetcdf-1.3.1 --with-hdf5=$HDF5_ROOT/bin/h5pcc --with-fftw3 --with-fftw3-mpi FFTW3_LIBDIR=/usr/lib/x86_64-linux-gnu --enable-mpi --with-papi=/home/pkestene/local/papi-5.3.0_nocuda

# gpu build
../configure --with-cuda=/usr/local/cuda-6.5 --enable-timing --with-vtk-version=-6.0 --enable-double --with-cuda-fast-math=no --with-pnetcdf=/home/pkestene/local/pnetcdf-1.4.1 --with-hdf5=$HDF5_ROOT/bin/h5pcc --with-fftw3 --with-fftw3-mpi FFTW3_LIBDIR=/usr/lib/x86_64-linux-gnu --enable-mpi --with-netcdf=no

##########
# sandrine
##########
module load cuda/6.5 hdf5/parallel_gnu48 pnetcdf/1.3.1_gnu48 papi/5.2.0

# cpu
../configure --with-cuda=no --enable-timing --with-vtk-version=-6.0 --with-cuda-fast-math=no --with-pnetcdf=$PNETCDF_ROOT --with-hdf5=no --with-papi=$PAPI_ROOT --enable-debug --with-fftw3 --with-fftw3-mpi FFTW3_LIBDIR=/usr/lib/x86_64-linux-gnu --enable-mpi MPICXX=mpicxx
