# -*- getpot -*- GetPot mode activation for emacs
#
# Hydro 2D example parameter file; jet simulation
#
# Converted from a fortran namelist containing
# various input parameters for HYDRO runs

[run]
tend=0.4
noutput=200
nstepmax=200
[]

# define a 2D MPI cartesian mesh with mx x my MPI processes
[mpi]
mx=2
my=2
mz=1
[]

# define the 2D problem for each MPI process
[mesh]
nx=1000
ny=1000
nz=1
# BoundaryConditionType :
# BC_UNDEFINED=0
# BC_DIRICHLET=1
# BC_NEUMANN=2 
# BC_PERIODIC=3
boundary_xmin=1
boundary_xmax=1
boundary_ymin=1
boundary_ymax=1
boundary_zmin=1
boundary_zmax=1
[]

[hydro]
problem='jet'
courant_factor=0.8
niter_riemann=10
iorder=1
slope_type=2
scheme='muscl'
# valid Riemann config number are integer between 0 and 18
riemann_config_number=0
XLAMBDA=0.25
YLAMBDA=0.25
ALPHA_KT=1.4
cfl=0.31
[]

[jet]
ijet=10
djet=1.
ujet=300.
pjet=1.
offsetJet=25
[]

[visu]
minvar=0.0
maxvar=8.0
manualContrast=0
[]

latexAnimation='no'
outputMode='binary'
outputPrefix='jet2d_cpu'
colorPng='no'
outputVtk='yes'
outputHdf5='yes'
